<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:text="PROFIL PRIBADI"
                android:textColor="@color/primary"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:background="@color/primary"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_user"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_user"
                app:tint="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nama_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama :"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_tgl_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir :"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_tl_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempat Lahir :"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_wa_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor WA :"
                    android:textStyle="bold"
                    android:layout_gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aletta Salsabila"/>

                <TextView
                    android:id="@+id/tv_tgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 April 2000"/>

                <TextView
                    android:id="@+id/tv_tl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batang"/>

                <TextView
                    android:id="@+id/tv_wa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="085810098407"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPendidikan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pendidikan"
                android:textSize="12dp"
                android:layout_marginEnd="2dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPengalaman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pengalaman"
                android:textSize="12dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnKeahlian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keahlian"
                android:textSize="12dp"
                android:layout_marginStart="2dp"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
